<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/thumbnail_sholat"
            android:layout_marginTop="5dp"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/takbir"/>
        <TextView
            android:id="@+id/detail_sholat"
            android:text="Berdiri Menghadap Kiblat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/thumbnail_sholat"/>
        <TextView
            android:id="@+id/sub_deetail_sholat"
            android:text="1 Ayat, 5 Hadist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/detail_sholat"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/thumbnail_sholat"/>

    </RelativeLayout>

</FrameLayout>